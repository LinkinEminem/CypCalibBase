<Window x:Class="CypCalib.WPF.Views.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CypCalib.WPF.Views"
        mc:Ignorable="d" WindowStyle="SingleBorderWindow"
        Title="ProgressBar" Height="120" Width="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <TextBlock Text="ProgressBar" TextAlignment="Center" VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <ProgressBar Grid.Row="1" Padding="10" Minimum="0" Maximum="100" Height="25" Width="220" IsIndeterminate="True" />
        <Button Grid.Row="2" Margin="10, 5, 10, 5"> 终止 </Button>
    </Grid>
</Window>
